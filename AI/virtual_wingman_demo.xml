<?xml version="1.0"?>

<PropertyList>
	<name>Virtual Wingman</name>

	<scenario>

		<description>
			Place a virtual wingman at given x,y,z offset relative to the 
			current main simulator aircraft.
		</description>

		<entry>
			<name>Flying Duo</name>
			<type>wingman</type>
			<model>Aircraft/PC-9M/Models/PC-9M_wingman.xml</model>
			<x-offset>50</x-offset>
			<y-offset>-60</y-offset>
			<z-offset>0</z-offset>
			<formate>true</formate>
			<coefficients>
				<heading>5.0</heading>
				<pitch>4.0</pitch>
				<bank>4.0</bank>
				<speed>2.5</speed>
			</coefficients>
		</entry>

	</scenario>

</PropertyList>
